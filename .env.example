# Database (apps/api)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DB?sslmode=require"

# MongoDB (events + products)
MONGO_URI="mongodb+srv://USER:PASSWORD@HOST/?appName=Geffen"
MONGO_DB="your_db_name"
MONGO_COLLECTION="stores.bana"

# Raw events storage
# - private: includes `tenantId` (opaque UUID)
# - global: sanitized pool (no `tenantId`)
MONGO_PRIVATE_COLLECTION="events_private"
MONGO_GLOBAL_COLLECTION="events_global"

# Legacy: if set, overrides MONGO_PRIVATE_COLLECTION (deprecated)
# MONGO_EVENTS_COLLECTION="events_private"

# Server
PORT=4000
CORS_ORIGIN="http://localhost:5173"

# OpenAI (shared for LLM + embeddings)
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_API_KEY="replace-me"

# LLM
LLM_MODEL="gpt-4.1-mini"
# Optional overrides:
# LLM_BASE_URL="https://api.openai.com/v1"
# LLM_API_KEY="replace-me"

# Embeddings (search/academy)
EMBEDDING_PROVIDER="openai"
EMBEDDING_MODEL="text-embedding-3-large"
EMBEDDING_DIMENSIONS=3072
# Optional overrides:
# EMBEDDING_BASE_URL="https://api.openai.com/v1"
# EMBEDDING_API_KEY="replace-me"
